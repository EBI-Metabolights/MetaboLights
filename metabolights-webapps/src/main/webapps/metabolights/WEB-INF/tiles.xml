<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">


<!-- Here in tiles.xml we have define a template base.definition. This layout 
	contains attributes such as Header, Title, Body, Menu and Footer. The layout 
	is then extended and new definitions are added per page. -->

<tiles-definitions>
	<definition name="base.definition" template="/WEB-INF/jsp/layout.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/jsp/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/jsp/footer.jsp" />
	</definition>

	<definition name="index" extends="base.definition">
		<put-attribute name="title"
			value="Metabolights - Metabolomics Portal" />
		<put-attribute name="body" value="/WEB-INF/jsp/index.jsp" />
	</definition>

	<definition name="about" extends="base.definition">
		<put-attribute name="title" value="About Metabolights" />
		<put-attribute name="body" value="/WEB-INF/jsp/about.jsp" />
	</definition>

    <definition name="login" extends="base.definition">
        <put-attribute name="title" value="Log in to Metabolights" />
        <put-attribute name="body" value="/WEB-INF/jsp/login.jsp" />
    </definition>

    <definition name="error" extends="base.definition">
        <put-attribute name="title" value="Error" />
        <put-attribute name="body" value="/WEB-INF/jsp/error.jsp" />
    </definition>

    <definition name="submit" extends="base.definition">
        <put-attribute name="title" value="Metabolights file upload for submission" />
        <put-attribute name="body" value="/WEB-INF/jsp/submit.jsp" />
    </definition>

    <definition name="biisubmit" extends="base.definition">
        <put-attribute name="title" value="Metabolights BII upload for submission" />
        <put-attribute name="body" value="/WEB-INF/jsp/biisubmit.jsp" />
    </definition>

    <definition name="reminder" extends="base.definition">
        <put-attribute name="title" value="Metabolights password reminder" />
        <put-attribute name="body" value="/WEB-INF/jsp/reminder.jsp" />
    </definition>

    <definition name="biisubmiterror" extends="base.definition">
	<put-attribute name="title" value="Submission error"/>
	<put-attribute name="body" value="/WEB-INF/jsp/biisubmiterror.jsp"/>
    </definition>

    <definition name="submitOk" extends="base.definition">
        <put-attribute name="title" value="Metabolights upload successful" />
        <put-attribute name="body" value="/WEB-INF/jsp/submitOk.jsp" />
    </definition>

    <definition name="entry" template="WEB-INF/jsp/entry.jsp"/>

    <definition name="timeout" extends="base.definition">
        <put-attribute name="title" value="Timed out of Metabolights" />
        <put-attribute name="body" value="/WEB-INF/jsp/timeout.jsp" />
    </definition>

    <definition name="createAccount" extends="base.definition">
        <put-attribute name="title" value="Create a new account for Metabolights" />
        <put-attribute name="body" value="/WEB-INF/jsp/createAccount.jsp" />
    </definition>

</tiles-definitions>
