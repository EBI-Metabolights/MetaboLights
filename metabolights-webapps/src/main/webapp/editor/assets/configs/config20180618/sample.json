{
   "mtbls-isatab-configuration":{
      "table-name":"sample",
      "fields":{
         "source name":{
            "data-type":"string",
            "sort-order":"1",
            "is-required":"true",
            "is-hidden":"false",
            "is-read-only":"false",
            "technique": "mass spectrometry|NMR spectroscopy",
            "description":"Sources are considered as the starting biological material used in a study. Include QC if you have this information.",
            "placeholder":"Batch1, Exp2, Urine1_calf, Volunteer7, pig serum 3, control_12",
            "rules":[
               {
                  "condition":"min",
                  "value":"4",
                  "error":"Please provide a name for the sample source. Needs to be at least 4 characters long",
                  "type":"string"
               }
            ]
         },
         "Organism":{
            "data-type":"Ontology",
            "sort-order":"2",
            "is-required":"true",
            "is-hidden":"false",
            "is-read-only":"false",
            "technique": "mass spectrometry|NMR spectroscopy",
            "description":"Taxonomic information for the Biological material (for example, Species, genus, strain). Ideally, provide NCBI TaxID",
            "placeholder":"Homo sapiens, Arabidopsis thaliana, Mus musculus, etc.",
            "rules":[
               {
                  "condition":"min",
                  "value":"3",
                  "error":"Please provide the taxonomic (latin) name for the sample. Please use 'Homo sapiens' not 'Human' etc. Needs to be at least 3 characters long. You can provide your own name if you can not find the correct organism name.",
                  "type":"string"
               }
            ],
            "recommended-ontologies":{
               "is-forced-ontology":"false",
               "ontologies":[
                  {
                     "termAccession":"http://data.bioontology.org/ontologies/NCBITAXON",
                     "termSource":"NCBITAXON"
                  }
               ]
            }
         },
         "Variant":{
            "data-type":"Ontology",
            "sort-order":"3",
            "is-required":"false",
            "is-hidden":"false",
            "is-read-only":"false",
            "technique": "mass spectrometry|NMR spectroscopy",
            "description":"Full taxonomic name including strain, cultivar, <TODO, Add from MSI sheet from Steffen/Philippe>",
            "placeholder":"",
            "rules":[
               {
                  "condition":"min",
                  "value":"3",
                  "error":"",
                  "type":"string"
               }
            ],
            "recommended-ontologies":{
               "is-forced-ontology":"false",
               "ontologies":[
                  {
                     "termAccession":"http://data.bioontology.org/ontologies/NCBITAXON",
                     "termSource":"NCBITAXON"
                  }
               ]
            }
         },
         "organism part":{
            "data-type":"Ontology term",
            "sort-order":"4",
            "is-required":"true",
            "is-hidden":"false",
            "is-read-only":"false",
            "technique": "mass spectrometry|NMR spectroscopy",
            "description":"The part of an organism's anatomy or substance, arising from an organism from which the biomaterial was derived. E.g. tissue, organ, system, sperm, blood, cell type, or body location (arm).",
            "placeholder":"Placeholder text",
            "rules":[
               {
                  "condition":"min",
                  "value":"2",
                  "error":"Please provide a name for the sample source. Needs to be at least 2 characters long",
                  "type":"string"
               }
            ],
            "recommended-ontologies":{
               "is-forced-ontology":"false",
               "ontology":[
                  {
                     "termAccession":"1005",
                     "termSource":"BTO"
                  },
                  {
                     "termAccession":"1136",
                     "termSource":"EFO"
                  },
                  {
                     "termAccession":"",
                     "termSource":"PO"
                  },
                  {
                     "termAccession":"",
                     "termSource":"FMA"
                  }
               ]
            }
         },
         "Sample collection":{
            "data-type":"Protocol",
            "sort-order":"4",
            "is-required":"true",
            "is-hidden":"true",
            "is-read-only":"true",
            "technique": "mass spectrometry|NMR spectroscopy",
            "description":"References a defined protocol",
            "placeholder":"Sample collection",
            "rules":[
               {
                  "condition":"exact",
                  "value":"Sample collection",
                  "error":"This is a mandatory fixed field and can not be edited or removed",
                  "type":"string"
               }
            ],
            "generated-value-template":"protocol.name"
         },
         "Sample Name":{
            "data-type":"String",
            "sort-order":"5",
            "is-required":"true",
            "is-hidden":"false",
            "is-read-only":"false",
            "technique": "mass spectrometry|NMR spectroscopy",
            "description":"Samples represent major outputs resulting from a protocol application other than the special case outputs of Instrument or a Sample extract",
            "placeholder":"Human1, Plant root6, 20180829_mus_1, Apple_control_1p",
            "rules":[
               {
                  "condition":"min",
                  "value":"4",
                  "error":"Please provide a descriptive name for the sample. Needs to be at least 4 characters long",
                  "type":"string"
               },
               {
                  "condition":"max",
                  "value":"50",
                  "error":"Please provide a descriptive name for the sample. This should not be longer than 50 characters",
                  "type":"string"
               }
            ]
         },
         "allowed-fields":[
            {
               "name":"characteristics"
            },
            {
               "name":"factors"
            }
         ]
      }
   }
}
